{% extends '::base.html.twig' %}

{% block body -%}
    <h1>校友通信录资料查询录入</h1>
    <h4 style="color: red">{{ errorHint }}</h4>
    <form class="form-horizontal" style="float: left; top: 30px; position: relative; left: 35%; width: 30%; display: block;text-align: center;" action="{{ path('search_result') }}" method="post" >
        <div class="form-group col-lg">
            <input type="text" name="nameSearch" class="form-control " id="searchText" placeholder="请输入真实姓名" value="{{ name }}"/>
        </div>
        <div class="form-group col-lg">
            <input type="text" name="phoneSearch" class="form-control " id="searchText" placeholder="请输入手机号码最后四位数字" value="{{ phone }}"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm-5" style="display: inline-block;">Search</button>
            {% if name %}
                <a href="{{ path('search_new', { 'name': name }) }}" class="btn btn-primary btn-sm-5">
                    新建联系人
                </a>
            {% else %}
                <a href="{{ path('search_new', { 'name': '' }) }}" class="btn btn-primary btn-sm-5">
                    新建联系人
                </a>
            {% endif %}
        </div>
    </form>

    {% if entities %}
        <script>alert("{{ entities }}");</script>
    {% endif %}
{% endblock %}

