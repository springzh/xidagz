{% extends '::base.html.twig' %}

{% block body -%}
    <h1>详情</h1>
    <div class="table-responsive" style="width: 50%; position: relative;left: 25%;">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                    <th>姓名</th>
                    <td>{{ entity.userName }}</td>
                </tr>
                <tr>
                    <th>手机</th>
                    <td>{{ entity.phoneNumber }}</td>
                    <th>年级院系专业</th>
                    <td>{{ entity.major }}</td>
                </tr>
                <tr>
                    <th>入学年份</th>
                    <td>{{ entity.enrollmentTime }}</td>
                    <th>就读院系</th>
                    <td>{{ entity.department }}</td>
                </tr>
                <tr>
                    <th>行业</th>
                    <td>{{ entity.profession }}</td>
                    <th>公司</th>
                    <td>{{ entity.company }}</td>
                </tr>
                <tr>
                    <th>职务</th>
                    <td>{{ entity.job }}</td>
                    <th>地址</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>座机</th>
                    <td>{{ entity.telephoneNumber }}</td>
                    <th>传真</th>
                    <td>{{ entity.faxNumber }}</td>
                </tr>
                <tr>
                    <th>邮箱</th>
                    <td>{{ entity.email }}</td>
                    <th>QQ</th>
                    <td>{{ entity.qqNumber }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group" style="text-align: left; position: relative;left: 25%;">
        <a href="{{ path('search') }}" class="btn btn-primary btn-sm-5">
            返回首页
        </a>
        <a href="{{ path('search_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm-5">
            修改
        </a>
        {#<a href="{{ path('search_delete', { 'id': entity.id }) }}" class="btn btn-primary btn-sm-5">
            删除
        </a>#}

    </div>
    </form>
    {% if errorHint %}
        <script>alert("{{ errorHint }}");</script>
    {% endif %}
{% endblock %}
