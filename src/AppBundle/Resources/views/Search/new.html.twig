{% extends '::base.html.twig' %}

{% block body -%}
    <h1>新建联系人</h1>
    <p>红色标记的为必填项。</p>
    
    <form  class="form-inline" name="new"  action="{{ path('search_create', { 'id': entity.id }) }}" method="post">
        {{ form_errors(form) }}
        {{ form_row(form._token) }}
        <div class="form-group col-lg-10" style="color: red">
            {{ form_row(form.userName) }}
        </div>
        <div class="form-group col-lg-10" style="color: red">
            {{ form_row(form.phoneNumber) }}
        </div>
        <div class="form-group col-lg-10" style="color: red">
            {{ form_row(form.major) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.enrollmentTime) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.department) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.profession) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.company) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.job) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.address) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.telephoneNumber) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.faxNumber) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group col-lg-10">
            {{ form_row(form.qqNumber) }}
        </div>
        <div class="form-group col-lg-10">
            <input type="submit" class="btn btn-primary btn-sm-5" value="保存">
            <span style="margin-right: 50px;">&nbsp;</span>
            <a href="{{ path('search') }}", class="btn btn-primary btn-sm-5">
                返回
            </a>
        </div>
    </form>
{% endblock %}
